<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#00FFFFFF"
    tools:context=".ConfigActivity">

    <TextView
        android:id="@+id/Cliente_name"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="80dp"
        android:text="Ana Perez"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/Cliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Edit_campos"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="#C67C4E"
        android:text="Editar Campos"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cliente" />

    <ImageView
        android:id="@+id/Cliente_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Cliente_name"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/Cliente"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginStart="35dp"
        android:text="Cliente"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cliente_name" />

    <Button
        android:id="@+id/Cerrar_sesion"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#C67C4E"
        android:text="Cerrar sesion"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edit_campos" />

    <TextView
        android:id="@+id/Configuraciones"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="Configuraciones"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/Cliente_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Return_ButtonImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:foregroundTint="#00FFFFFF"
        android:scaleX="0.65"
        android:scaleY="0.65"
        app:layout_constraintEnd_toStartOf="@+id/Configuraciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left"
        tools:srcCompat="@drawable/arrow_left" />

    <ImageView
        android:id="@+id/button_home"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_setting"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home"
        tools:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/button_setting"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:background="#FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_home"
        app:srcCompat="@drawable/settings"
        tools:srcCompat="@drawable/settings" />

</androidx.constraintlayout.widget.ConstraintLayout>
